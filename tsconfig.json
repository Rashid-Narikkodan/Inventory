{
  "compilerOptions": {
    /* Language & Environment */
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",

    /* Output */
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,

    /* Type Safety */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    
    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Build Quality */
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}